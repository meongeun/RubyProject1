    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
    <style>
    .alert-error {
        color:red;
    }
    .alert-warning{
        color:orange;
    }
    </style>
  <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=672db2fd56d471f0ca8614068c8971f6"></script>

  </head>
  <body>
      <!--어느 화면에서나 뜨는 정보 -->
      <% flash.each do |key, value| %>
            <div class="alert alert-<%=key%>"><%=value%> </div>

      <% end %>
    <%= yield %>
  </body>
</html>
